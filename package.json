{
  "name": "spad",
  "version": "1.0.0",
  "description": "US Derivatives Trading Platform - MVP",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build --workspaces",
    "build:api": "cd apps/api && npm run build",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "migrate": "cd packages/db && npm run migrate",
    "migrate:test": "cd packages/db && npm run migrate:test",
    "seed:dev": "cd packages/db && npm run seed:dev",
    "lint": "npm run lint --workspace=apps/api",
    "typecheck": "npm run typecheck --workspace=apps/api",
    "format": "npx prettier --write ."
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
