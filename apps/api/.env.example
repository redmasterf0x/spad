# Database
DATABASE_URL=postgresql://spad_user:spad_pass@localhost:5432/spad_dev
DATABASE_URL_TEST=postgresql://spad_user:spad_pass@localhost:5432/spad_test
DATABASE_POOL_SIZE=10
DATABASE_POOL_IDLE_TIMEOUT=30000

# JWT
JWT_SECRET=dev-secret-key-never-use-in-production
JWT_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Third-party APIs (Sandbox)
PERSONA_API_KEY=sandbox_xxx_persona_key
PERSONA_WEBHOOK_SECRET=sandbox_xxx_persona_secret

EVOLVE_API_KEY=sandbox_xxx_evolve_key
EVOLVE_WEBHOOK_SECRET=sandbox_xxx_evolve_secret

BROKER_API_KEY=sandbox_xxx_broker_key
BROKER_WEBHOOK_SECRET=sandbox_xxx_broker_secret

# Redis
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# Feature Flags
MAINTENANCE_MODE=false
