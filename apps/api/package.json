    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.10.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.7",
